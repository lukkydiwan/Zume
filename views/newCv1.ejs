<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Resume Template</title>


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 40px 20px;
    }
  
    form {
      background-color: #ffffff;
      border: 1px solid #dee2e6;
      border-radius: 8px;
      padding: 30px;
      max-width: 800px;
      margin: auto;
    }
  
    h1 input {
      border: none;
      font-size: 32px;
      font-weight: 600;
      color: #212529;
      text-align: center;
    }
  
    .first input {
      text-align: center;
      border: none;
      font-size: 16px;
      color: #495057;
      margin-bottom: 8px;
    }
  
    section {
      margin-bottom: 24px;
    }
  
    section h3 {
      font-size: 18px;
      font-weight: 600;
      color: #343a40;
      border-bottom: 1px solid #dee2e6;
      padding-bottom: 6px;
      margin-bottom: 16px;
    }
  
    input,
    textarea {
      border: 1px solid #ced4da;
      border-radius: 6px;
      padding: 10px 12px;
      width: 100%;
      font-size: 14px;
      color: #212529;
      background-color: #fff;
      margin-bottom: 10px;
    }
  
    input:focus,
    textarea:focus {
      border-color: #86b7fe;
      outline: none;
      box-shadow: 0 0 0 0.1rem rgba(13, 110, 253, 0.1);
    }
  
    textarea {
      resize: vertical;
      min-height: 100px;
    }
  
    .row .col input {
      margin-bottom: 0;
    }
  
    ul li {
      list-style: none;
    }
  
    button {
      border-radius: 6px;
      padding: 10px 20px;
      font-size: 14px;
    }
  
    .btn-primary,
    .btn-secondary,
    .btn-success {
      box-shadow: none;
    }
  
    .text-center button {
      width: 200px;
    }
  </style>
  
</head>
<body>
  <form action="/Cv1" method="post">
    <section class="first text-center mb-4">
      <h1><input id="name" name="user[name]" type="text" placeholder="Your Name" class="form-control"></h1>
      <div class="contact">
        <input type="text" name="user[email]" placeholder="Email" class="form-control">
      </div>
    </section>

    <section>
      <h3>Summary</h3>
      <textarea name="user[summary]" placeholder="Briefly explain why you're a great fit for the role..." class="form-control"></textarea>
    </section>

    <section>
      <h3>Experience</h3>
      <input type="text" name="user[experience][company]" placeholder="Company Name" class="form-control">
      <div class="row">
        <div class="col">
          <input type="text" name="user[experience][location]" placeholder="Location" class="form-control">
        </div>
        <div class="col">
          <input type="text" name="user[experience][period]" placeholder="Date period" class="form-control">
        </div>
      </div>
      <ul class="mt-2">
        <li>
          <textarea name="user[experience][description]" placeholder="Company Description" class="form-control"></textarea>
        </li>
      </ul>
    </section>

    <section id="education-section">
      <h3>Education</h3>
    
      <div id="education-fields">
        <input type="text" name="user[education][0][school]" placeholder="School or University" class="form-control mt-3">
        <input type="text" name="user[education][0][degree]" placeholder="Degree and Field of Study" class="form-control">
        <input type="text" name="user[education][0][period]" placeholder="Date period" class="form-control">
      </div>
    
      <button type="button" class="addEdu btn btn-secondary mt-3">Add more field</button>
    </section>

    <section>
      <h3>Key Achievements</h3>
      <input type="text" name="user[achievement][name]" placeholder="Your Achievement" class="form-control">
      <textarea name="user[achievement][description]" placeholder="Describe what you did and the impact it had." class="form-control"></textarea>
    </section>

    <section>
      <h3>Skills</h3>
      <input name="user[skills]" type="text" placeholder="Your Skill (e.g. React, SQL, Figma)" class="form-control">
    </section>

    <section>
      <h3>Certification</h3>
      <input name="user[certification]" type="text" placeholder="Course Title" class="form-control">
    </section>

    <section>
      <h3>Projects</h3>
      <input type="text" name="user[project][name]" placeholder="Project Name" class="form-control">
      <div class="row">
        <div class="col">
          <input type="text" name="user[project][location]" placeholder="Location" class="form-control">
        </div>
        <div class="col">
          <input type="text" name="user[project][period]" placeholder="Date period" class="form-control">
        </div>
      </div>
    </section>

    <div id="custom-sections">

    </div>

    <button type="button" class="btn btn-primary" id="newField">Add new field</button>
    <div class="text-center mt-4">
      <button type="submit" class="btn btn-primary">Create my resume</button>
    </div>
  </form>
</body>



<script>
 let eduCounter = 1;

document.querySelector('.addEdu').addEventListener('click', function () {
  const button = this; // reference to the Add button
  const container = document.createElement('div');

  container.innerHTML = `
    <input type="text" name="user[education][${eduCounter}][school]" placeholder="School or University" class="form-control mt-3">
    <input type="text" name="user[education][${eduCounter}][degree]" placeholder="Degree and Field of Study" class="form-control">
    <input type="text" name="user[education][${eduCounter}][period]" placeholder="Date period" class="form-control">
  `;
  // Insert before the button
  button.parentNode.insertBefore(container, button);
  eduCounter++;
  
});



let newCounter = 0;

document.getElementById("newField").addEventListener('click', () => {
  const button = document.getElementById("newField");
  const container = document.createElement('div');

  container.innerHTML = `
    <section class="mt-4">
      <h3><input name="user[new][${newCounter}][heading]" type="text" placeholder="Heading for new field" class="form-control mb-2"></h3>
      <input name="user[new][${newCounter}][text]" type="text" placeholder="Explain" class="form-control">
    </section>
  `;

  // Insert new section before the button
  button.parentNode.insertBefore(container, button);

  newCounter++;
});




</script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</html>


